.col-md-3.col-sm-3
  %h1 Create Plan
  = form_tag plans_path, :method => :post, :id => 'search_form' do
    .search-input-container.input-group
      %input(class="form-control search-bar" type="text" placeholder="Choose a name..." name="plan_name" autocomplete="off")
      %span{:class =>"input-group-btn"}>
        = submit_tag 'Add', :class => "btn btn-default search-submit"
.col-md-9.col-sm-9
  .col-md-12.col-sm-12
    %h2 My Plans
    %table.table
      %thead
        %tr
          %th Name
          %th Actions
      %tbody
        - @plans.each do |plan|
          %tr.row-hover
            %td= link_to "#{plan.name}", plan_path(plan)
            %td= link_to "Delete", plan_path(plan), :method => :delete, :class => "btn btn-xs btn-danger", data: { confirm: "Are you sure?" }
