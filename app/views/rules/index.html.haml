.left-column-container.column.col-md-3
.right-column-container.column.container.col-md-8
  %h2 Rules
  %table.table
    %thead
      %tr
        %th Rule
        %th Description
    .body
      - @rules.values.each do |rule|
        - next if rule.hidden?
        %tr
          %td= link_to rule.name, display_rules_path(:rule => rule.name)
          %td= rule.description