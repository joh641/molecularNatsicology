.col-md-3.col-sm-3
.col-md-9.col-sm-9
  .col-md-12.col-sm-12
    %h2= @course.search_name
    %h4= @course.title
    %h3 Description
    #description= @course.description
    %h3 Units
    #units= @course.units
    %h3 Rules Met
    %table.table
      %tbody
        - @course.rule_list.each do |rule|
          - begin
            - Rule.get(rule)
          - rescue
            - next
          %tr.row-hover
            %td= rule
            %td= link_to Rule.get(rule).description, display_rules_path(:rule => rule)
