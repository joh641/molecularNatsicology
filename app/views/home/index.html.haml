= form_tag '/landing', method: :post do
  %div= email_field :user, :email, autofocus: true, placeholder: "Email", :class => "input-field-top"

  %div= password_field :user, :password, autocomplete: "off", placeholder: "Password", :class => "input-field-middle"

  %div= password_field :user, :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation", :class => "input-field-bottom"

  %div= submit_tag "Sign up", :class => "sign-up-submit"
